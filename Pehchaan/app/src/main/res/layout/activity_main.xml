<?xml version="1.0" encoding="utf-8"?><android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:app="http://schemas.android.com/apk/res-auto"    android:id="@+id/drawer_layout"    android:layout_width="match_parent"    android:layout_height="match_parent"    android:fitsSystemWindows="true">    <RelativeLayout android:layout_height="wrap_content"    android:layout_width="match_parent"    xmlns:android="http://schemas.android.com/apk/res/android"    android:clickable="true"    android:focusableInTouchMode="true"    android:theme="@style/AppTheme"    android:id="@+id/parentwindow">        <android.support.v7.widget.Toolbar            android:id="@+id/toolbar"            android:layout_width="match_parent"            android:layout_height="?attr/actionBarSize"            android:background="?attr/colorPrimary"            android:theme="@style/ThemeOverlay.AppCompat.ActionBar" />        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"        android:id="@+id/rootparent"        android:layout_width="match_parent"        android:layout_height="match_parent" android:layout_below="@+id/toolbar"        android:layout_above="@+id/submit"        android:background="#eeeeee"        android:orientation="vertical"        >        <LinearLayout            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:orientation="horizontal"            android:weightSum="17">            <LinearLayout                android:layout_width="match_parent"                android:layout_height="wrap_content"                android:layout_marginBottom="10dp"                android:layout_marginLeft="10dp"                android:layout_marginRight="6dp"                android:layout_marginTop="10dp"                android:layout_weight="8.5"                android:orientation="vertical">                <TextView                    android:id="@+id/salepertransaction"                    android:layout_width="match_parent"                    android:layout_height="88dp"                    android:layout_marginTop="8dp"                    android:background="@drawable/right_top_1"                    android:enabled="false"                    android:gravity="center"                    android:text="0.0"                    android:textColor="#f4910f"                    android:textSize="36dp"                    android:textStyle="bold"/>                <TextView                    android:id="@+id/totalsalesoutput"                    android:layout_width="wrap_content"                    android:layout_height="60dp"                    android:layout_marginTop="5dp"                    android:background="@drawable/right_top_2"                    android:enabled="false"                    android:gravity="center"                    android:text="0.0"                    android:textColor="#3f9e9c"                    android:textSize="28dp"                    android:textStyle="bold" />                />            </LinearLayout>            <LinearLayout                android:layout_width="match_parent"                android:layout_height="wrap_content"                android:layout_marginBottom="10dp"                android:layout_marginLeft="3dp"                android:layout_marginRight="10dp"                android:layout_marginTop="10dp"                android:layout_weight="8.5"                android:orientation="vertical">                <LinearLayout                    android:layout_width="match_parent"                    android:layout_height="72dp"                    android:layout_marginTop="8dp"                    android:background="#ffffff"                    android:weightSum="10"                    android:id="@+id/combinedbag">                    <ImageView                        android:layout_width="0dp"                        android:layout_height="60dp"                        android:layout_margin="5dp"                        android:layout_weight="1.5"                        android:src="@drawable/bag"                        android:id="@+id/combinedbagimage"/>                    <AutoCompleteTextView                        android:id="@+id/customerid"                        android:layout_width="0dp"                        android:layout_height="72dp"                        android:layout_weight="8.5"                        android:background="#ffffff"                        android:ems="10"                        android:gravity="center"                        android:hint="Bag No."                        android:inputType="number" />                </LinearLayout>                <LinearLayout                    android:layout_width="match_parent"                    android:layout_height="72dp"                    android:layout_marginTop="5dp"                    android:background="#ffffff"                    android:weightSum="10"                    android:id="@+id/combinedrupee">                    <ImageView                        android:layout_width="0dp"                        android:layout_height="60dp"                        android:layout_margin="5dp"                        android:layout_weight="2"                        android:src="@drawable/rupee"                        android:id="@+id/combinedbagrupee"/>                    <EditText                        android:id="@+id/totalprice"                        android:layout_width="0dp"                        android:layout_height="72dp"                        android:layout_weight="8"                        android:background="#ffffff"                        android:ems="10"                        android:gravity="center"                        android:hint="Sales"                        android:inputType="number"                        />                </LinearLayout>            </LinearLayout>        </LinearLayout>        <RadioGroup            android:layout_width="fill_parent"            android:layout_height="wrap_content"            android:orientation="horizontal"            android:layout_margin="2dp"            android:gravity="center">            <RadioButton android:id="@+id/pehchaanreferralmainscreen"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:text="Pehchaan"                android:checked="true"                android:textSize="18sp"                android:layout_marginRight="40dp"                />            <RadioButton android:id="@+id/pehchaanreferralscreen"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:text="Referral"                android:onClick="referralfragment"                android:textSize="18sp"                />        </RadioGroup>        <ScrollView            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:orientation="vertical"            >        <LinearLayout            android:id="@+id/fruits"            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:background="#eeeeee"            android:gravity="center"            android:orientation="vertical"            android:padding="4dp"            >           <!-- <LinearLayout                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:orientation="vertical">                <ImageView                    android:layout_width="80dp"                    android:layout_height="75dp"                    android:layout_marginRight="8dp"                    android:onClick="manipulatingcart"                    android:src="@drawable/watermelon"                    android:tag="watermelon" />                <ImageView                    android:layout_width="80dp"                    android:layout_height="75dp"                    android:layout_marginRight="8dp"                    android:onClick="manipulatingcart"                    android:src="@drawable/muskmelon"                    android:tag="muskmelon" />                <ImageView                    android:layout_width="80dp"                    android:layout_height="75dp"                    android:onClick="manipulatingcart"                    android:src="@drawable/litchi"                    android:tag="litchi" />                <ImageView                    android:layout_width="80dp"                    android:layout_height="75dp"                    android:layout_marginRight="8dp"                    android:onClick="manipulatingcart"                    android:src="@drawable/kiwi"                    android:tag="kiwi" />            </LinearLayout>            <LinearLayout                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:orientation="vertical">                <ImageView                    android:layout_width="80dp"                    android:layout_height="75dp"                    android:layout_marginRight="8dp"                    android:onClick="manipulatingcart"                    android:padding="10px"                    android:src="@drawable/apple"                    android:tag="apple"                    />                <ImageView                    android:layout_width="80dp"                    android:layout_height="75dp"                    android:layout_marginRight="8dp"                    android:onClick="manipulatingcart"                    android:padding="10px"                    android:src="@drawable/banana"                    android:tag="banana" />                <ImageView                    android:layout_width="80dp"                    android:layout_height="75dp"                    android:onClick="manipulatingcart"                    android:src="@drawable/orange"                    android:tag="orange"/>                <ImageView                    android:layout_width="80dp"                    android:layout_height="75dp"                    android:layout_marginRight="8dp"                    android:onClick="manipulatingcart"                    android:src="@drawable/coconut"                    android:tag="coconut" />            </LinearLayout>            <LinearLayout                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:orientation="vertical">                <ImageView                    android:layout_width="80dp"                    android:layout_height="75dp"                    android:onClick="manipulatingcart"                    android:src="@drawable/mangototapuri"                    android:tag="mangototapuri" />                <ImageView                    android:layout_width="80dp"                    android:layout_height="75dp"                    android:onClick="manipulatingcart"                    android:src="@drawable/mangoba"                    android:tag="mangobadam" />                <ImageView                    android:layout_width="80dp"                    android:layout_height="75dp"                    android:layout_marginRight="8dp"                    android:onClick="manipulatingcart"                    android:padding="10px"                    android:src="@drawable/mango_neelam"                    android:tag="mangoneelum"/>                <ImageView                    android:layout_width="80dp"                    android:layout_height="75dp"                    android:layout_marginRight="8dp"                    android:onClick="manipulatingcart"                    android:src="@drawable/proe"                    android:tag="anaar" />            </LinearLayout>            <LinearLayout                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:orientation="vertical">                <ImageView                    android:layout_width="80dp"                    android:layout_height="75dp"                    android:onClick="manipulatingcart"                    android:src="@drawable/mangoke"                    android:tag="mangokesar" />                <ImageView                    android:layout_width="80dp"                    android:layout_height="75dp"                    android:layout_marginRight="8dp"                    android:onClick="manipulatingcart"                    android:src="@drawable/mangohafus"                    android:tag="mangohafus" />                <ImageView                    android:layout_width="80dp"                    android:layout_height="75dp"                    android:layout_marginRight="8dp"                    android:onClick="manipulatingcart"                    android:src="@drawable/mangoda"                    android:tag="mangodashari" />                <ImageView                    android:layout_width="80dp"                    android:layout_height="75dp"                    android:layout_marginRight="8dp"                    android:onClick="manipulatingcart"                    android:src="@drawable/peer"                    android:tag="peer" />            </LinearLayout>            <LinearLayout                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:orientation="vertical">                <ImageView                    android:layout_width="80dp"                    android:layout_height="75dp"                    android:layout_marginRight="8dp"                    android:onClick="manipulatingcart"                    android:padding="10px"                    android:src="@drawable/plum"                    android:tag="plum" />                <ImageView                    android:layout_width="80dp"                    android:layout_height="75dp"                    android:onClick="manipulatingcart"                    android:src="@drawable/chikoo"                    android:tag="chikoo" />                <ImageView                    android:layout_width="80dp"                    android:layout_height="75dp"                    android:onClick="manipulatingcart"                    android:src="@drawable/gauva"                    android:tag="Gauva" />                <ImageView                    android:layout_width="80dp"                    android:layout_height="75dp"                    android:layout_marginRight="8dp"                    android:onClick="manipulatingcart"                    android:src="@drawable/dates"                    android:tag="Dates" />            </LinearLayout>            -->        </LinearLayout>        </ScrollView>    </LinearLayout>    <FrameLayout        android:layout_width="match_parent"        android:layout_height="match_parent"        android:id="@+id/referralframehelp"        />    <RelativeLayout        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:id="@+id/referralframe"        android:layout_centerInParent="true"        />    <Button        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:layout_alignParentBottom="true"        android:background="#4ccccc"        android:text="Submit"        android:textSize="20dp"        android:id="@+id/submit"        /></RelativeLayout>    <android.support.design.widget.NavigationView        android:id="@+id/nav_view"        android:layout_width="wrap_content"        android:layout_height="match_parent"        android:layout_gravity="start"        android:fitsSystemWindows="true"        app:menu="@menu/drawer_view"        app:headerLayout="@layout/nav_header"/></android.support.v4.widget.DrawerLayout>