<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <ScrollView android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/submit">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
                <TextView android:textSize="18.0dip"
                    android:textColor="#000000"
                    android:id="@+id/register"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="50.0dip"
                    android:text="Register"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"/>
                <EditText
                    android:textColorLink="#ffffff"
                    android:gravity="center"
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20.0dip"
                    android:hint="Name"
                    android:ems="10"
                    android:layout_below="@id/register"
                    android:layout_centerHorizontal="true"
                    android:inputType="text"/>
                <EditText
                    android:textColorLink="#ffffff"
                    android:gravity="center"
                    android:id="@+id/mobilenumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20.0dip"
                    android:hint="Mobile Number"
                    android:ems="10"
                    android:layout_below="@id/name"
                    android:layout_centerHorizontal="true"
                    android:inputType="text"/>
                <Spinner
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:id="@+id/locality"
                    android:layout_marginTop="20.0dip"
                    android:ems="10"
                    android:layout_below="@id/mobilenumber"
                    android:layout_centerHorizontal="true"></Spinner>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
    <Button android:textColor="#000000"
        android:id="@+id/submitforotpverification"
        android:background="#4ccccc"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:onClick="setSubmitforotpverification"/>
</RelativeLayout>